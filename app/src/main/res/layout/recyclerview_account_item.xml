<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recyclerAccountItemIconImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:background="@drawable/radio_icon_circle"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_outline_shopping_cart_24"
        android:padding="10dp">

    </ImageView>

    <TextView
        android:id="@+id/recyclerAccountItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="Name Name Name Name Name Name Name Name Name Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/recyclerAccountItemSumTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:minWidth="60dp"
        android:text="0.0"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/recyclerAccountItemCurrencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:minWidth="60dp"
        android:text="BYN"
        android:textAlignment="center"
        android:textSize="24sp" />
</LinearLayout>